<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_white</item>
    </style>

    <style name="AppTheme.Light">
        <item name="colorPrimaryDark">@color/color_black</item>
        <item name="android:statusBarColor">@color/color_black</item>
    </style>
    
    <style name="AppTheme.Light.Fullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/color_edit_text</item>
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/color_edit_text</item>
        <item name="colorControlNormal">@color/color_edit_text</item>
        <item name="colorControlActivated">@color/color_edit_text</item>
    </style>

    <style name="AppTheme.MainTheme">
        <item name="colorPrimary">#46a6e3</item>
        <item name="colorPrimaryDark">@color/color_status_bar</item>
        <item name="android:statusBarColor">#46a6e3</item>
    </style>

    <style name="AppTheme.MainTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/muli_bold</item>
    </style>

    <style name="AppTheme.NavDrawerItem">
        <item name="itemBackground">@color/color_white</item>
        <item name="android:textSize">12.9sp</item>
        <item name="itemTextColor">@color/menu_text_color</item>
    </style>

    <style name="AppTheme.DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/color_date_picker</item>
    </style>

    <style name="AppTheme.TransparentButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="textAllCaps">true</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableRight">@drawable/ic_back_bl</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/muli_semi_bold</item>
        <item name="android:textColor">@color/color_text_blue</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="AppTheme.ActionButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <!--<item name="android:foreground">?android:attr/selectableItemBackground</item>-->
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/color_button_text_white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/muli_bold</item>
    </style>

    <style name="AppTheme.ActionButton.Blue">
        <item name="android:background">@drawable/blue_button_background</item>
    </style>

    <style name="AppTheme.ActionButton.Green">
        <item name="android:background">@drawable/green_button_background</item>
    </style>

    <style name="AppTheme.ActionButton.Borderless">
        <item name="android:textColor">@color/color_button_blue</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.MainTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabBackground">@color/color_status_bar</item>
        <item name="tabTextAppearance">@style/AppTheme.MainTheme.TabLayout.TextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="AppTheme.MainTheme.TabLayout.TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#80FFFFFF</item>
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/muli_bold</item>
        <item name="android:typeface">normal</item>
    </style>

    <!-- simple progress dialog -->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--<item name="android:windowBackground">@color/color_progress_dialog_background_transparent</item>-->
    </style>

    <!-- wrap content progress dialog -->
    <style name="AppTheme.Dialog.FixedSize" parent="Base.Theme.AppCompat.Light.Dialog.FixedSize">
        <!--<item name="android:windowBackground">@color/color_progress_dialog_background_transparent</item>-->
    </style>

    <!-- full screen progress dialog -->
    <style name="AppTheme.Dialog.Fullscreen" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/color_progress_dialog_background</item>
    </style>

</resources>
