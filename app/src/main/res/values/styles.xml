<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_white</item>
    </style>

    <style name="AppTheme.Light">
        <item name="android:statusBarColor">@color/color_black</item>
    </style>
    
    <style name="AppTheme.Light.Fullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--<item name="colorAccent">@color/colorPrimaryLight</item>-->
        <!--<item name="android:textColorPrimary">@color/white</item>-->
        <!--<item name="android:background">@color/grey_dialog_box</item>-->
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/color_edit_text</item>
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/color_edit_text</item>
        <item name="colorControlNormal">@color/color_edit_text</item>
        <item name="colorControlActivated">@color/color_edit_text</item>
    </style>

    <style name="AppTheme.MainTheme">
        <item name="colorPrimary">#46a6e3</item>
        <item name="colorPrimaryDark">@color/color_status_bar</item>
        <item name="android:statusBarColor">#46a6e3</item>
    </style>

    <style name="AppTheme.MainTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="AppTheme.NavDrawerItem">
        <item name="itemBackground">@color/color_white</item>
        <item name="android:textSize">12.9sp</item>
        <item name="itemTextColor">@color/menu_text_color</item>
    </style>

    <style name="AppTheme.DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/color_date_picker</item>
    </style>

</resources>
