<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:contentPaddingBottom="12dp"
    app:contentPaddingLeft="24dp"
    app:contentPaddingRight="24dp"
    app:contentPaddingTop="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_user_default" />

        <com.kora.android.views.CustomTextView
            android:id="@+id/text_view_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/image_view_avatar"
            android:layout_toRightOf="@+id/image_view_avatar"
            android:textColor="@color/color_text_title"
            android:textSize="16sp"
            app:font="@string/font_name_muli_bold"
            tools:text="Kora One" />

        <com.kora.android.views.CustomTextView
            android:id="@+id/text_view_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_user_name"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/image_view_avatar"
            android:layout_toRightOf="@+id/image_view_avatar"
            android:textColor="@color/color_text_title"
            android:textSize="14sp"
            app:font="@string/font_name_muli_regular"
            tools:text="+380501234567" />

    </RelativeLayout>

</android.support.v7.widget.CardView>