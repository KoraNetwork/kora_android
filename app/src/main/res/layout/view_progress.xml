<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view_loading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <android.support.v7.widget.AppCompatTextView
        android:gravity="center"
        android:layout_alignStart="@+id/animation_view_loading"
        android:layout_alignEnd="@+id/animation_view_loading"
        android:id="@+id/text_view_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animation_view_loading"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/muli_bold"
        android:textColor="@color/color_text_loader"
        android:textSize="30sp"
        tools:text="KORA" />

</RelativeLayout>