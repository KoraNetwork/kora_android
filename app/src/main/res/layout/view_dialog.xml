<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_dialog_background"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/color_dialog_title"
                android:textSize="20sp"
                android:fontFamily="@font/muli_semi_bold"
                tools:text="Dialog title"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/text_view_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/color_dialog_text"
                android:textSize="18sp"
                android:fontFamily="@font/muli_normal"
                tools:text="Dialog text"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:id="@+id/btns_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/button_positive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="CANCEL"
                        android:textColor="@color/color_dialog_button_text"
                        android:textSize="18sp"
                        android:fontFamily="@font/muli_bold"
                        />

                    <!--<View-->
                    <!--android:layout_width="1dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:background="@android:color/black" />-->

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/button_negative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:fontFamily="@font/muli_bold"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="CANCEL"
                        android:textColor="@color/color_dialog_button_text"
                        android:textSize="18sp" />
                </LinearLayout>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/text_btn_ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="OK"
                    android:textColor="@color/color_dialog_button_text"
                    android:textSize="18sp"
                    android:visibility="visible" />
            </FrameLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>